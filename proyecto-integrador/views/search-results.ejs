<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logosolo.svg" />
	
	<title> Papu Store</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css" />
</head>

<body>
	<!-- Header -->
	<% if (logueado != true) { %>
		<%- include('./partials/headerNoLogueado.ejs') %>
	
	 <% } else { %>
		<%- include('./partials/headerLogueado.ejs') %>

	<% } %>
	<!-- Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < productos.length; i++ ) { %>

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/details/<%= productos[i].id %>">
							<figure class="product-box_image">
								<!-- En esta seccion me aseguro que haya 1 sola imagen, y si hay 2 hacer el efecto -->
								<img class="imagen1" src="/images/products/<%=productos[i].imagen%>" alt="<%= productos[i].nombre  %>">
								<% if (productos[i].imagen2 != undefined) { %>
									<img class="imagen2" src="/images/products/<%=productos[i].imagen2%>" alt="<%= productos[i].nombre  %>">
								<%} else { %>
									<img class="imagen2" src="/images/products/<%=productos[i].imagen%>" alt="<%= productos[i].nombre  %>">
								<% } %>
								 
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre %></h2>
								<p><%= productos[i].descripcionCorta %></p>
								<p>Comentarios: <%= productos[i].usuario.comentarios.length %></p>
								<a class="publicuser"  href="/user/profile"><p class="publicuser">Publicado por: <%= productos[i].usuario.email %></p></a>
							</article>
						</a>
					</section>
				</div>
			 
			 <% } %>
			

	<!-- Footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- Footer -->
</body>

</html>